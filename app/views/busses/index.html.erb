<h1>DRT Bus Schedules</h1>

<select class="bus-route">
	<option>SELECT BUS ROUTE</option>
	<% @bus_routes.each do |k,v| %>
		<% name = "<option value=" + v + ">" + k + "</option>" %>
		<%= raw name %>
	<% end %>
</select>

<form>
	<input type="radio" name="day" value="weekday" checked>Weekday
	<br>
	<input type="radio" name="day" value="saturday">Saturday
	<br>
	<input type="radio" name="day" value="sunday">Sunday
</form>

<div id="bus-stops">
</div>

<div id="stop-times">
</div>

<script id="bus-stops-template" type="text/x-handlebars-template">
	<h2>Select Stop</h2>
	<select class="bus-stop">
		<option>SELECT STOP</option>
		{{#each stopNames}}
			<option value="{{fullName}}">{{shortName}}</option>
		{{/each}}
	</select>
</script>

<script id="stop-times-template" type="text/x-handlebars-template">
	<h3>Stop Times</h3>
	<ul class="stop-times">
		{{#each stopTime}}
			<li>
				{{this}}
			</li>
		{{/each}}
	</ul>
</script>
