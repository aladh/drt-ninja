<h1>List of Bus Routes</h1>

<ul>
	<li>
		<%= link_to "110 Central Pickering", buss_path(110), class: "bus-route" %>
	</li>
</ul>

<div id="bus-stops">
</div>

<div id="stop-times">
</div>

<script id="bus-stops-template" type="text/x-handlebars-template">
	<h2>Select Stop</h2>
	<select class="bus-stop">
		<option>SELECT STOP</option>
		{{#each stopName}}
			<option>{{this}}</option>
		{{/each}}
	</select>
</script>

<script id="stop-times-template" type="text/x-handlebars-template">
	<h3>Stop Times</h3>
	<ul class="stop-times">
		{{#each stopTime}}
			<li>
				{{this}}
			</li>
		{{/each}}
	</ul>
</script>